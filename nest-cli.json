{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "mail/templates/**/*", "outDir": "dist/src" },
      { "include": "generator/templates/**/*", "outDir": "dist/src" },
      { "include": "../storage/**/*", "outDir": "dist/storage" },
      { "include": "../tmp/**/*", "outDir": "dist/tmp" }
    ],
    "watchAssets": true
  }
}
